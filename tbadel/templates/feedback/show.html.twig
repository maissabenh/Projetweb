{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
 <a href="{{ path('app_feedback_index') }}"><i class="icon-back fas fa-arrow-circle-left"></i>back to list</a>
    <h1 class="text-center mb-5">Feedback</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feedback.id }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ feedback.rating }}</td>
            </tr>
            <tr>
                <th>Comment</th>
