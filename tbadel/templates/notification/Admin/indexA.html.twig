{% extends 'backbase.html.twig' %}

{% block title %}Notification index{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 ">Notification index</h1>
    <a href="{{ path('app_notification_new') }}"><i class="fas fa-plus"></i>Create new</a>
     <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
<div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
    <table class="table align-items-center mb-0">
        <thead>
            <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">message</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">type</th>
               
            </tr>
        </thead>
        <tbody>
        {% for n in notifications %}
            <tr>
                <td>{{ n.id }}</td>
                <td>{{ n.message }}</td>
                <td>{{ n.type }}</td>
                {# <td>{{ n.date ? n.date|date('Y-m-d') : '' }}</td> #}
                <td>
                    <a href="{{ path('app_notification_show', {'id': n.id}) }}"><i class="fas fa-eye"></i>show</a>
                </td>
                <td>
                    <a href="{{ path('app_notification_edit', {'id': n.id}) }}"><i class="fas fa-edit"></i>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div></div>
<br>
    


    <style>
.table {
    margin: 0 auto; /* centers the table horizontally */
}
  h1 {
        color: #14B1A1;
    }
</style>
{% endblock %}
