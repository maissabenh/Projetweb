{% extends 'backbase.html.twig' %}

{% block title %}Reclamtion index{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 ">RECLAMATIONS</h1>
    <a href="{{ path('app_reclamation_new') }}"><i class="fas fa-plus"></i>Create new</a>
     <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
<div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
    <table class="table align-items-center mb-0">
        <thead>
            <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                  {# <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">user_id</th> #}
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Subject</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Message</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">CreatedAt</th>


                
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Show</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for r in reclamation %}
            <tr>
                <td>{{ r.id }}</td>
                <td>{{ r.subject }}</td>
                <td>{{ r.message }}</td>
                <td>{{ r.status }}</td>
                
                <td>{{ r.createdAt ? r.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ r.email }}</td>

                <td>
                    <a href="{{ path('app_reclamation_show', {'id': r.id}) }}"><i class="fas fa-eye"></i>show</a>
                </td>
                <td>
                    <a href="{{ path('app_reclamation_edit', {'id': r.id}) }}"><i class="fas fa-edit"></i>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div></div>
<br>
    


    <style>
.table {
    margin: 0 auto; /* centers the table horizontally */
}
  h1 {
        color: #14B1A1;
    }
</style>
{% endblock %}
